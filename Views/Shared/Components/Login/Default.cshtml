@model LoginViewModel

@{

}

<div class="ui raised very padded text container" style="margin-right:50%; margin-top:5%;">
    <h1 class="ui header centered">APP LOGIN FORM</h1>
    <form asp-controller="Home" asp-action="Authenticate" method="post" class="ui large form validate-me" role="form">

        <div class="ui stack segment">
            <div class="field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input asp-for="Username" placeholder="Username" />
                    <span asp-validation-for="Username" style="color:red;"></span>
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" style="color:red;"></span>
                </div>
            </div>
            <div>
                <button class="ui blue button">
                    <i class="lock icon"></i>
                    Login
                </button>
            </div>
            <div asp-validation-summary="All" class="ui error" style="color:red;"></div>
        </div>
    </form>
</div>
