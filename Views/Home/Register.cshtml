@model RegisterViewModel

@{ 
    ViewData["Title"] = "Register";
}

<div class="ui raise very padded text container"  style="margin-right:50%; margin-top:5%;">
    <h2 class="ui header centered">Register</h2>
    <form asp-controller="Home" asp-action="Register" class="ui large form validate-me" method="post">
        <div class="ui stacked segment">
            <div class="field">
                <div class="ui left icon input">
                    <!-- ui = user icon -->
                    <i class="user icon"></i>
                    <input asp-for="Username" placeholder="Email Address" />
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="Password" type="password" placeholder="Password" />
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
                </div>
            </div>
            <input type="submit" class="ui large green submit button" value="Register" />
            <div asp-validation-summary="All" class="ui error"></div> <!-- displays validation at the bottom -->
        </div>
    </form>
</div>