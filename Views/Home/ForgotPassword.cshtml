@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="ui raise very padded text container" style="margin-right:50%; margin-top:5%;">
    <h2 class="ui header centered">Forgot Password</h2>
    <form asp-controller="Home" asp-action="ForgotPassword" class="ui large form validate-me" method="post">
        <div class="ui stacked segment">
            <div class="field">
                <div class="ui left icon input"> <!-- ui = user icon -->
                    <i class="user icon"></i>
                    <input asp-for="Email" placeholder="Email Address" />
                </div>
            </div>
            <input type="submit" class="ui large blue submit button" value="Send" />
            <div asp-validation-summary="All" class="ui error"></div>
        </div>
    </form>
</div>